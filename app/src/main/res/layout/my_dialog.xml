<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="#6699ff"
        android:gravity="center"
        android:text="WhiteList"
        android:textColor="@color/colorWord"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dialog_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/dialog_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_edittext"
        android:layout_margin="5dp"
        android:background="#6699ff"
        android:gravity="center"
        android:text="commit"
        android:textColor="@color/colorWord" />

    <Button
        android:id="@+id/dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_edittext"
        android:layout_margin="5dp"
        android:background="#6699ff"
        android:text="cancel"
        android:textColor="@color/colorWord" />
</RelativeLayout>