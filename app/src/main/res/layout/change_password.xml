<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/changePassword_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarCorlor"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/me_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePassword_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="@color/colorBlue"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_origin_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/me_title"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="初始密码: "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_origin_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/me_title"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/text_origin_password"
        android:hint="请输入初始密码"
        android:password="true" />

    <TextView
        android:id="@+id/text_new_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_origin_password"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="新密码: "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_origin_password"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/text_new_password"
        android:hint="请输入新密码"
        android:password="true" />

    <TextView
        android:id="@+id/text_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_new_password"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:text="新密码: "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text_new_password"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/text_confirm_password"
        android:hint="请再次输入新密码"
        android:password="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_confirm_password"
        android:layout_margin="20dp"
        android:background="@color/colorPink"
        android:text="修改密码" />
</RelativeLayout>