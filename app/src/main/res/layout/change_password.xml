<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/me_title"
        android:text="修改密码"
        android:textColor="@color/colorBlue"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_origin_password"
        android:layout_margin="5dp"
        android:text="初始密码: "
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_below="@+id/me_title"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/edit_origin_password"
        android:layout_margin="5dp"
        android:text="123456"
        android:layout_below="@+id/me_title"
        android:layout_toRightOf="@+id/text_origin_password"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/text_new_password"
        android:layout_margin="5dp"
        android:text="初始密码: "
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_below="@+id/edit_origin_password"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/edit_new_password"
        android:layout_margin="5dp"
        android:text="123456"
        android:layout_below="@+id/edit_origin_password"
        android:layout_toRightOf="@+id/text_new_password"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/text_confirm_password"
        android:layout_margin="5dp"
        android:text="初始密码: "
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_below="@+id/text_new_password"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/edit_confirm_password"
        android:layout_margin="5dp"
        android:text="123456"
        android:layout_below="@+id/text_new_password"
        android:layout_toRightOf="@+id/text_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/submit"
        android:text="修改密码"
        android:layout_margin="20dp"
        android:layout_below="@+id/text_confirm_password"
        android:layout_alignParentRight="true"
        android:background="@color/colorPink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>